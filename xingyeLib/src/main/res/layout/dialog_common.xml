<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:jingdong.jdrdm="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_caption"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:textColor="#ff222222"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- Message part -->

            <TextView
                android:id="@+id/dialog_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:textColor="@color/c_FF444444"
                android:textSize="32dp" />

            
            <!--<com.jingdong.jdrdm.lib.ui.CheckBox-->
            	<!--android:id="@+id/checkbox"-->
            	<!--android:layout_width="wrap_content"-->
            	<!--android:layout_height="wrap_content"-->
            	<!--android:layout_marginLeft="20dp"-->
            	<!--android:layout_marginTop="@dimen/margin_size_40xp"-->
            	<!--jingdong.jdrdm:checkboxImageOff="@drawable/choose_radio_off"-->
            	<!--jingdong.jdrdm:checkboxImageOn="@drawable/choose_radio_on"-->
            	<!--jingdong.jdrdm:contentColor="@color/c_FF444444"-->
            	<!--jingdong.jdrdm:contentSize="@dimen/font_size_28xp"-->
            	<!--jingdong.jdrdm:isChecked="false"-->
            	<!--android:visibility="gone"/>-->
            	
            <!-- Image for Split line -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/c_7FCCCCCC" />

            <!-- Button options -->

            <LinearLayout
                android:id="@+id/dialog_btn_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dialog_btn_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/global_transparent_shadow_click_state"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:textColor="#ff4f96f8"
                    android:textSize="34dp" />

                <TextView
                    android:id="@+id/dialog_btn_separator"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/c_7FCCCCCC" />

                <TextView
                    android:id="@+id/dialog_btn_negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/global_transparent_shadow_click_state"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:textColor="#ff4f96f8"
                    android:textSize="34dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>