<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list >
            <item>
                <shape>
                    <solid android:color="#D74041" />
                </shape>
            </item>
            <item
                android:top="1dp"
                android:left="1dp"
                android:bottom="1dp"
                android:right="1dp">
                <shape>
                    <solid android:color="#FFFFFF"/>
                    <padding
                        android:left="12dp"
                        android:top="8dp"
                        android:right="12dp"
                        android:bottom="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list >
            <item>
                <shape>
                    <solid android:color="#DDDDDD" />
                </shape>
            </item>
            <item
                android:top="1dp"
                android:left="1dp"
                android:bottom="1dp"
                android:right="1dp">
                <shape>
                    <solid android:color="#FFFFFF"/>
                    <padding
                        android:left="12dp"
                        android:top="8dp"
                        android:right="12dp"
                        android:bottom="8dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>