<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/main_tab"
        android:background="@color/c_7FCCCCCC"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tab_0"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="4dp"
                android:id="@+id/tab_imv_0"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@mipmap/icon_home_n"/>
            <TextView
                android:id="@+id/tab_tv_0"
                android:textColor="@color/c_5E4D3F"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="首页"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="4dp"
                android:id="@+id/tab_imv_1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@mipmap/icon_chuzhen_n"/>
            <TextView
                android:id="@+id/tab_tv_1"
                android:textColor="@color/c_929292"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="专家出诊表"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="4dp"
                android:id="@+id/tab_imv_2"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@mipmap/icon_zixun_n"/>

            <TextView
                android:id="@+id/tab_tv_2"
                android:textColor="@color/c_929292"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="在线咨询"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="4dp"
                android:id="@+id/tab_imv_3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@mipmap/icon_my_n"/>
            <TextView
                android:id="@+id/tab_tv_3"
                android:textColor="@color/c_929292"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="我的中心"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_tab"/>

</RelativeLayout>