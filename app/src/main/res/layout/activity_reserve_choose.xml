<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FAFAFA"
    android:orientation="vertical">

    <com.xingye.netzoo.xylib.utils.ui.NaviBar
        android:id="@+id/reserve_choose_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:bgcolor="#5E4D3F"
        tools:titleText="@string/entrance_5"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/key_arrow_item"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/meidc_plaster"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c_C8C7CC"/>
        <include layout="@layout/key_arrow_item"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/china_prescirption"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c_C8C7CC"/>
        <include layout="@layout/key_arrow_item"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/for_boil"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c_C8C7CC"/>
        <include layout="@layout/key_arrow_item"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/preparation"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c_C8C7CC"/>
        <include layout="@layout/key_arrow_item"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/china_patent_medicine"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c_C8C7CC"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>