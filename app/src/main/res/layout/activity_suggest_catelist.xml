<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FAFAFA">

    <com.xingye.netzoo.xylib.utils.ui.NaviBar
        android:layout_alignParentTop="true"
        android:id="@+id/suggest_catelist_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:bgcolor="#5E4D3F"
        tools:titleText="@string/entrance_8"/>

    <ListView
        android:divider="@null"
        android:layout_width="165dp"
        android:layout_height="match_parent"
        android:layout_below="@id/suggest_catelist_nav"
        android:background="@color/c_F2EBD8"
        android:id="@+id/main_list"/>
    <ListView
        android:layout_toRightOf="@id/main_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/suggest_catelist_nav"
        android:id="@+id/sub_list"
        android:background="@color/c_FFFFFF"/>
</RelativeLayout>