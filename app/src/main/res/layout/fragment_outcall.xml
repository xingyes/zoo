<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFFFFF"
    android:orientation="vertical">
    <com.xingye.netzoo.xylib.utils.ui.NaviBar
        android:id="@+id/cate_doc_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:bgcolor="#5E4D3F"
        tools:titleText="@string/specialist"
        tools:leftVisible="false"/>

    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:background="@color/c_E9E9E9"
        android:layout_height="33dp">
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:layout_alignParentRight="true"
            android:id="@+id/search_del"
            android:src="@mipmap/icon_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <EditText
            android:background="@null"
            android:layout_toLeftOf="@+id/search_del"
            android:id="@+id/search_keyword"
            android:inputType="text"
            android:maxLines="1"
            android:drawablePadding="2dp"
            android:drawableLeft="@mipmap/icon_search"
            android:imeOptions="actionSearch"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/doctor_name"
            android:textColorHint="#7A797B"
            android:textSize="14dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_C8C7CC"/>

    <RadioGroup
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:id="@+id/hospital_group"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/top_part"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:background="@drawable/button_brown_frame"
        android:orientation="horizontal">

        <RadioButton
            android:background="@drawable/round_tab_left_state"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/hospital_mid"
            android:text="@string/hospital_center"
            android:textColor="@drawable/hospital_text_color_state"/>
        <RadioButton
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/hospital_north"
            android:text="@string/hospital_north"
            android:textColor="@drawable/hospital_text_color_state"
            android:background="@drawable/round_tab_mid_state"/>
        <RadioButton
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/hospital_south"
            android:text="@string/hospital_south"
            android:textColor="@drawable/hospital_text_color_state"
            android:background="@drawable/round_tab_right_state" />
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <ListView
        android:divider="@null"
        android:layout_width="165dp"
        android:layout_height="match_parent"
        android:background="@color/c_F2EBD8"
        android:id="@+id/main_list"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hospital_group"
        android:id="@+id/sub_list"
        android:background="@color/c_FFFFFF"/>
    </LinearLayout>

</LinearLayout>