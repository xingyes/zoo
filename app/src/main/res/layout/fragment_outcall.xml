<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FFFFFF"
    android:orientation="vertical">
    <!--<com.xingye.netzoo.xylib.utils.ui.NaviBar-->
        <!--android:id="@+id/cate_doc_nav"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--tools:bgcolor="#5E4D3F"-->
        <!--tools:titleText="@string/specialist"-->
        <!--tools:leftVisible="false"/>-->

    <RelativeLayout
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:background="@color/c_E9E9E9"
        android:layout_height="33dp">
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:layout_alignParentRight="true"
            android:id="@+id/search_del"
            android:src="@mipmap/icon_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

        <EditText
            android:background="@null"
            android:layout_toLeftOf="@+id/search_del"
            android:id="@+id/search_keyword"
            android:inputType="text"
            android:maxLines="1"
            android:drawablePadding="2dp"
            android:drawableLeft="@mipmap/icon_search"
            android:imeOptions="actionSearch"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/doctor_name"
            android:textColorHint="#7A797B"
            android:textSize="14dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_C8C7CC"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/outcall_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>