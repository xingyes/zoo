<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/c_FFFFFF">
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical|left"
        android:layout_width="68dp"
        android:layout_height="match_parent"
        android:id="@+id/info_key"
        android:textSize="16dp"
        android:text="@string/verify_code"
        android:textColor="@color/c_5E4D3F"/>

    <TextView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:padding="6dp"
        android:layout_alignParentRight="true"
        android:id="@+id/info_func"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_brown"
        android:textColor="@drawable/hospital_text_color_state"
        android:textSize="15dp"
        android:gravity="center"
        android:text="@string/verify_code_resend_x"/>
    <EditText
        android:background="@null"
        android:hint="@string/verify_code"
        android:layout_toRightOf="@id/info_key"
        android:layout_toLeftOf="@id/info_func"
        android:inputType="text"
        android:maxLines="1"
        android:id="@+id/info_edit"
        android:imeOptions="actionNext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColorHint="@color/hint_color"
        android:textSize="16dp"
        android:gravity="center_vertical|left"/>

</RelativeLayout>
