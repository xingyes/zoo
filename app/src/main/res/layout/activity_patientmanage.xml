<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FAFAFA"
    android:orientation="vertical">

    <com.xingye.netzoo.xylib.utils.ui.NaviBar
        android:layout_alignParentTop="true"
        android:id="@+id/patient_mang_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:bgcolor="#5E4D3F"
        tools:titleText="@string/patient_manage"/>
    <RelativeLayout
        android:layout_below="@id/patient_mang_nav"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/add_patient_layout">
        <TextView
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/icon_add"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#474747"
            android:text="添加就诊人" />
    </RelativeLayout>

    <TextView
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_brown"
        android:layout_gravity="center_horizontal"
        android:layout_width="335dp"
        android:layout_height="57dp"
        android:gravity="center"
        android:id="@+id/submit_btn"
        android:text="@string/sure_submit"
        android:textColor="@drawable/hospital_text_color_state"/>

    <com.xingye.netzoo.xylib.utils.ui.ItemRemoveRecyclerView
        android:layout_below="@id/add_patient_layout"
        android:layout_above="@id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/patient_list_v"
        />
</RelativeLayout>