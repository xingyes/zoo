<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_FAFAFA"
    android:orientation="vertical">

    <com.xingye.netzoo.xylib.utils.ui.NaviBar
        android:id="@+id/patient_edit_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:bgcolor="#5E4D3F"
        tools:titleText="@string/patient_manage"/>

    <RelativeLayout
        android:layout_below="@id/patient_edit_nav"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:id="@+id/add_patient_layout">
        <TextView
            android:gravity="center"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/icon_head"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#474747"
            android:text="身份验证" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/add_patient_layout">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_C8C7CC"/>

    <include layout="@layout/key_edit_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/name_info"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_C8C7CC"/>
    <include layout="@layout/key_edit_item"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/phone_info"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c_C8C7CC"/>
    <include layout="@layout/key_edit_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/personid_info"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c_C8C7CC"/>
    <include layout="@layout/key_edit_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/medicid_info"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/c_C8C7CC"/>

    </LinearLayout>

    <TextView
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_brown"
        android:layout_gravity="center_horizontal"
        android:layout_width="335dp"
        android:layout_height="57dp"
        android:gravity="center"
        android:id="@+id/submit_btn"
        android:text="@string/sure_submit"
        android:textColor="@drawable/hospital_text_color_state"/>

</RelativeLayout>