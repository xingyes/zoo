<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp">
    <ImageView
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/info_icon"
        android:src="@mipmap/icon_checked"/>
    <TextView
        android:layout_toRightOf="@id/info_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_key"
        android:textSize="16dp"
        android:textColor="#474747"
        android:text="好的"/>


    <CheckBox
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:checked="false"
        android:button="@null"
        android:background="@drawable/button_check"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_check"
        android:textSize="16dp"
        android:textColor="@drawable/hospital_text_color_state"
        android:gravity="center"/>
</RelativeLayout>
